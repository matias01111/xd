<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Sistema de Reservas UDP</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .btn-primary {
            background-color: #1e3a8a;
            border-color: #1e3a8a;
        }
        .btn-primary:hover {
            background-color: #1e40af;
            border-color: #1e40af;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/dashboard">
                <i class="fas fa-university"></i> UDP Reservas
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard">
                            <i class="fas fa-home"></i> Inicio
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/disponibilidad">
                            <i class="fas fa-search"></i> Buscar Espacios
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user"></i> <%= user.nombre %>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="/perfil"><i class="fas fa-user-circle"></i> Mi Perfil</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/logout"><i class="fas fa-sign-out-alt"></i> Cerrar Sesión</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container my-4">
        <div class="row">
            <div class="col-12">
                <h2>
                    <i class="fas fa-search"></i> Consultar Disponibilidad
                </h2>
            </div>
        </div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-filter"></i> Filtros de Búsqueda
                </h5>
            </div>
            <div class="card-body">
                <form method="POST" action="/disponibilidad">
                    <div class="mb-3">
                        <label for="fecha" class="form-label">
                            <i class="fas fa-calendar"></i> Fecha
                        </label>
                        <input type="date" class="form-control" id="fecha" name="fecha" 
                               value="<%= searchParams ? searchParams.fecha : '' %>" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="hora" class="form-label">
                            <i class="fas fa-clock"></i> Hora de Inicio
                        </label>
                        <input type="time" class="form-control" id="hora" name="hora" 
                               value="<%= searchParams ? searchParams.hora : '' %>" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="duracion" class="form-label">
                            <i class="fas fa-hourglass-half"></i> Duración (horas)
                        </label>
                        <select class="form-select" id="duracion" name="duracion" required>
                            <option value="">Selecciona duración</option>
                            <option value="1" <%= searchParams && searchParams.duracion == '1' ? 'selected' : '' %>>1 hora</option>
                            <option value="2" <%= searchParams && searchParams.duracion == '2' ? 'selected' : '' %>>2 horas</option>
                            <option value="3" <%= searchParams && searchParams.duracion == '3' ? 'selected' : '' %>>3 horas</option>
                            <option value="4" <%= searchParams && searchParams.duracion == '4' ? 'selected' : '' %>>4 horas</option>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label for="tipo_espacio" class="form-label">
                            <i class="fas fa-building"></i> Tipo de Espacio
                        </label>
                        <select class="form-select" id="tipo_espacio" name="tipo_espacio">
                            <option value="">Todos los espacios</option>
                            <option value="sala" <%= searchParams && searchParams.tipo_espacio === 'sala' ? 'selected' : '' %>>Sala</option>
                            <option value="cancha" <%= searchParams && searchParams.tipo_espacio === 'cancha' ? 'selected' : '' %>>Cancha</option>
                        </select>
                    </div>
                    
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i> Buscar Disponibilidad
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <% if (results && results.length > 0) { %>
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-list"></i> Espacios Disponibles
                    </h5>
                </div>
                <div class="card-body">
                    <% results.forEach(function(space) { %>
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h6 class="card-title">
                                            <i class="fas fa-<%= space.tipo === 'sala' ? 'door-open' : 'futbol' %>"></i>
                                            <%= space.nombre %>
                                        </h6>
                                        <p class="card-text">
                                            <small class="text-muted">
                                                <i class="fas fa-users"></i> Capacidad: <%= space.capacidad %> personas
                                                <br>
                                                <i class="fas fa-tag"></i> Tipo: <%= space.tipo.charAt(0).toUpperCase() + space.tipo.slice(1) %>
                                            </small>
                                        </p>
                                        
                                        <% if (space.disponible) { %>
                                            <span class="badge bg-success">
                                                <i class="fas fa-check"></i> Disponible
                                            </span>
                                        <% } else { %>
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times"></i> No Disponible
                                            </span>
                                            <% if (space.conflicto_info) { %>
                                                <br><small class="text-danger"><%= space.conflicto_info %></small>
                                            <% } %>
                                        <% } %>
                                    </div>
                                    
                                    <% if (space.disponible) { %>
                                        <button class="btn btn-primary btn-sm" 
                                                onclick="showReservationModal('<%= space.id %>', '<%= space.nombre %>', '<%= searchParams.fecha %>', '<%= searchParams.hora %>', '<%= searchParams.duracion %>')">
                                            <i class="fas fa-calendar-plus"></i> Reservar
                                        </button>
                                    <% } %>
                                </div>
                                
                                <% if (space.horarios_disponibles && space.horarios_disponibles.length > 0) { %>
                                    <div class="mt-2">
                                        <small class="text-muted">Horarios disponibles:</small>
                                        <div class="d-flex flex-wrap gap-1">
                                            <% space.horarios_disponibles.slice(0, 5).forEach(function(horario) { %>
                                                <span class="badge bg-light text-dark"><%= horario %></span>
                                            <% }); %>
                                            <% if (space.horarios_disponibles.length > 5) { %>
                                                <span class="badge bg-light text-dark">+<%= space.horarios_disponibles.length - 5 %> más</span>
                                            <% } %>
                                        </div>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        <% } else if (error) { %>
            <div class="alert alert-danger" role="alert">
                <i class="fas fa-exclamation-circle"></i> <%= error %>
            </div>
        <% } %>
    </div>
</div>

<!-- Modal de Reserva -->
<div class="modal fade" id="reservationModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-calendar-plus"></i> Crear Reserva
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="POST" action="/reservar">
                <div class="modal-body">
                    <input type="hidden" id="modal_espacio_id" name="id_espacio">
                    <input type="hidden" id="modal_fecha_inicio" name="fecha_inicio">
                    <input type="hidden" id="modal_fecha_fin" name="fecha_fin">
                    
                    <div class="mb-3">
                        <label class="form-label">Espacio</label>
                        <input type="text" class="form-control" id="modal_espacio_nombre" readonly>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Fecha y Hora</label>
                        <input type="text" class="form-control" id="modal_fecha_hora" readonly>
                    </div>
                    
                    <div class="mb-3">
                        <label for="motivo" class="form-label">
                            <i class="fas fa-comment"></i> Motivo de la Reserva
                        </label>
                        <textarea class="form-control" id="motivo" name="motivo" rows="3" 
                                  placeholder="Describe el motivo de tu reserva..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-calendar-plus"></i> Crear Reserva
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
function showReservationModal(espacioId, espacioNombre, fecha, hora, duracion) {
    // Calcular fecha y hora de inicio y fin
    const fechaInicio = new Date(fecha + 'T' + hora + ':00');
    const fechaFin = new Date(fechaInicio.getTime() + (duracion * 60 * 60 * 1000));
    
    // Formatear para el servidor
    const fechaInicioISO = fechaInicio.toISOString();
    const fechaFinISO = fechaFin.toISOString();
    
    // Formatear para mostrar
    const fechaHoraTexto = fechaInicio.toLocaleDateString('es-CL') + ' ' + 
                          fechaInicio.toLocaleTimeString('es-CL', {hour: '2-digit', minute: '2-digit'}) + ' - ' +
                          fechaFin.toLocaleTimeString('es-CL', {hour: '2-digit', minute: '2-digit'});
    
    // Llenar el modal
    document.getElementById('modal_espacio_id').value = espacioId;
    document.getElementById('modal_espacio_nombre').value = espacioNombre;
    document.getElementById('modal_fecha_inicio').value = fechaInicioISO;
    document.getElementById('modal_fecha_fin').value = fechaFinISO;
    document.getElementById('modal_fecha_hora').value = fechaHoraTexto;
    
    // Mostrar el modal
    new bootstrap.Modal(document.getElementById('reservationModal')).show();
}
</script>
    </main>

    <footer class="bg-light mt-5 py-4">
        <div class="container text-center">
            <p class="text-muted mb-0">
                <i class="fas fa-university"></i> Universidad Diego Portales - Sistema de Reservas
            </p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>




