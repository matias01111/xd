<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Sistema de Reservas UDP</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .btn-primary {
            background-color: #1e3a8a;
            border-color: #1e3a8a;
        }
        .btn-primary:hover {
            background-color: #1e40af;
            border-color: #1e40af;
        }
        .status-badge {
            font-size: 0.75rem;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-university"></i> UDP Reservas
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/dashboard">
                            <i class="fas fa-tachometer-alt"></i> Panel Principal
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/disponibilidad">
                            <i class="fas fa-search"></i> Consultar Disponibilidad
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user"></i> <%= user.nombre %>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/logout">
                                <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                            </a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2>
                        <i class="fas fa-tachometer-alt"></i> Mi Panel de Reservas
                    </h2>
                    <div class="text-muted">
                        <i class="fas fa-user"></i> <%= user.nombre %> (<%= user.tipo_usuario %>)
                    </div>
                </div>
            </div>
        </div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-list"></i> Mis Reservas
                </h5>
                <a href="/disponibilidad" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus"></i> Nueva Reserva
                </a>
            </div>
            <div class="card-body">
                <% if (typeof bookings !== 'undefined' && bookings.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Espacio</th>
                                    <th>Fecha</th>
                                    <th>Hora</th>
                                    <th>Estado</th>
                                    <th>Motivo</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% bookings.forEach(function(booking) { %>
                                    <tr>
                                        <td>
                                            <i class="fas fa-<%= booking.espacio_nombre.toLowerCase().includes('sala') ? 'door-open' : 'futbol' %>"></i>
                                            <%= booking.espacio_nombre %>
                                        </td>
                                        <td><%= new Date(booking.fecha_inicio).toLocaleDateString('es-CL') %></td>
                                        <td>
                                            <%= new Date(booking.fecha_inicio).toLocaleTimeString('es-CL', {hour: '2-digit', minute: '2-digit'}) %> - 
                                            <%= new Date(booking.fecha_fin).toLocaleTimeString('es-CL', {hour: '2-digit', minute: '2-digit'}) %>
                                        </td>
                                        <td>
                                            <% 
                                                const statusClasses = {
                                                    'pendiente': 'warning',
                                                    'aprobada': 'success',
                                                    'rechazada': 'danger',
                                                    'cancelada': 'secondary'
                                                };
                                                const statusIcons = {
                                                    'pendiente': 'clock',
                                                    'aprobada': 'check-circle',
                                                    'rechazada': 'times-circle',
                                                    'cancelada': 'ban'
                                                };
                                            %>
                                            <span class="badge bg-<%= statusClasses[booking.estado] || 'secondary' %> status-badge">
                                                <i class="fas fa-<%= statusIcons[booking.estado] || 'question' %>"></i>
                                                <%= booking.estado.charAt(0).toUpperCase() + booking.estado.slice(1) %>
                                            </span>
                                        </td>
                                        <td><%= booking.motivo || '-' %></td>
                                        <td>
                                            <% if (booking.estado === 'pendiente' || booking.estado === 'aprobada') { %>
                                                <form method="POST" action="/cancelar-reserva" style="display: inline;">
                                                    <input type="hidden" name="booking_id" value="<%= booking.id %>">
                                                    <button type="submit" class="btn btn-outline-danger btn-sm" 
                                                            onclick="return confirm('¿Estás seguro de cancelar esta reserva?')">
                                                        <i class="fas fa-times"></i> Cancelar
                                                    </button>
                                                </form>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-4">
                        <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No tienes reservas registradas</p>
                        <a href="/disponibilidad" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Crear Primera Reserva
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-info-circle"></i> Información
                </h6>
            </div>
            <div class="card-body">
                <p class="card-text">
                    <strong>Total de reservas:</strong> <%= bookings ? bookings.length : 0 %>
                </p>
                <p class="card-text">
                    <strong>Reservas activas:</strong> 
                    <%= bookings ? bookings.filter(b => b.estado === 'pendiente' || b.estado === 'aprobada').length : 0 %>
                </p>
            </div>
        </div>
        
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-lightbulb"></i> Consejos
                </h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li class="mb-2">
                        <i class="fas fa-check text-success"></i>
                        <small>Revisa la disponibilidad antes de reservar</small>
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success"></i>
                        <small>Las reservas requieren aprobación</small>
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success"></i>
                        <small>Puedes cancelar reservas pendientes</small>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
    </main>

    <footer class="bg-light mt-5 py-4">
        <div class="container text-center">
            <p class="text-muted mb-0">
                <i class="fas fa-university"></i> Universidad Diego Portales - Sistema de Reservas
            </p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>




